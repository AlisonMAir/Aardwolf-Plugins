<description trim="y">
<![CDATA[
You must have the Nottingham goal completed for this plugin to work.
To setup this plugin, run to Entrance to Sherwood (11077) and type: "mapper cexit run n;;shakeyscan;;wait(0.1);;say camp".
]]>
</description>

</plugin>


<!--  Triggers  -->

<triggers>
  <trigger
   match="^(North|South|East|West|Up|Down) from here you see\:$"
   name="nottinghamscan"
   send_to="12"
   sequence="100"
   regexp="y"
  >
  <send>
  direction = tostring("%1")
  SendNoEcho(direction)
  EnableTrigger("nottinghamscan", false)
  </send>
  </trigger>
</triggers>

<!--  Aliases  -->

<aliases>
  <alias
   match="shakeyscan"
   enabled="y"
   send_to="12"
   sequence="100"
  >
  <send>EnableTrigger("nottinghamscan", true)
SendNoEcho("scan shakey speare")</send>
  </alias>
</aliases>

